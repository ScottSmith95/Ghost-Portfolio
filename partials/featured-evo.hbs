{{#get "posts" slug="evo-and-co"}}
{{#foreach posts}}

<section class="feature cf evo">
	
	<div class="main-info">
		<a class="main-image" href="{{url}}">
			<img class="post-image" src="{{image}}">
		</a>
		
		<div class="main-text">
			<h2>
				<a href="{{url}}">{{title}}</a>
			</h2>
			<p class="item-text">
				EVO and Company is a new clothing brand for active people. This project features branding, front-end web design, and development work.
			</p>
		</div>
	</div>
	
	<div class="aside one cf">
		<img class="aside-image" src="{{asset "features/evo/detail.png"}}">
		<p class="aside-text">
			I created a dark mode toggle for users desiring a high-contrast experience. It is usable for anyone and adds a much better experience for users with impaired vision.
		</p>
	</div>
	
	<div class="aside two cf">
		<img class="aside-image" src="{{asset "features/evo/logo.svg"}}">
		<p class="aside-text">
			The project is off to a great start. The site is expanding quickly to fit the evolving needs of the company.
		</p>
	</div>
	
	<!-- EVO-specifc content here. -->
	
</section>

{{/foreach}}

{{/get}}